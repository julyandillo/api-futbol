    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('login') }}
{% endblock %}

{% block body %}
    <div class="contenido">
        <div class="login-form">
            <h2>Inicia sesi칩n para continuar</h2>
            <form action="{{ path('app_login') }}" method="post">
                <label for="usuario">Usuario</label>
                <input type="text" id="usuario" name="_username"/>

                <label for="password">Contrase침a</label>
                <input type="password" id="password" name="_password">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="boton boton-primary w-100" type="submit">Iniciar sesi칩n</button>
            </form>
            {% if error %}
                <div class="error">
                    {{ error.messageKey }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="footer"><img src="{{ asset('img/fondo_login.svg') }}" alt="ondas"></div>
{% endblock %}
