{% extends 'base.html.twig' %}

{% block title %}Inicio de sesión{% endblock %}

{% block javascripts %}
    {{ importmap(['app', 'login']) }}
{% endblock %}

{% block body %}
    <div class="contenido">
        <div class="login-form">
            <h2>Inicia sesión</h2>
            <form action="{{ path('app_login') }}" method="post">
                <label for="usuario">Usuario</label>
                <input type="text" id="usuario" name="_username"/>

                <label for="password">Contraseña</label>
                <input type="password" id="password" name="_password">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="boton boton-primary w-100 mt-2" type="submit">Iniciar sesión</button>

                <div class="remember-me">
                    <label class="checkbox-label">
                        <input type="checkbox" name="_remember_me" id="remember_me">
                        Recuérdame
                    </label>
                </div>
            </form>
            {% if error %}
                <div class="error">
                    {{ error.messageKey }}
                </div>
            {% endif %}
        </div>
    </div>
    <div class="footer"><img src="{{ asset('img/fondo_login.svg') }}" alt="ondas"></div>
{% endblock %}
